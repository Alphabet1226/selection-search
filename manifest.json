{
    "name": "Selection Search",
    "version": "0.3.1",

    "description": "Search for the selected text in search engines",

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"options_page": "options.html",

    "background_page": "background.html",

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["jquery-1.4.2.min.js", "popup.js", "search.js"],
			"run_at" : "document_end"
		},
		{
			"matches": ["http://mycroft.mozdev.org/*"],
			"js": ["jquery-1.4.2.min.js", "opensearch.js", "sites/mycroft.js"],
			"run_at" : "document_end"
		}
	],

    "permissions": [
		"http://mycroft.mozdev.org/"
	]
}