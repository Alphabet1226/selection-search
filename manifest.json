{
    "name": "Selection Search",
    "version": "0.7.18",
	"manifest_version" : 2,

    "description": "Search for the selected text in search engines",

    "minimum_chrome_version": "20",

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"options_page": "options.html",

    "background": {
		"page" : "background.html",
		"persistent" : true
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["jquery-1.7.2.min.js", "urlparse.js", "common.js", "popup.js", "engine-editor.js", "extractform.js", "search.js"],
			"run_at" : "document_end",
			"all_frames" : true
		},
		{
			"matches": ["http://mycroftproject.com/*"],
			"js": ["jquery-1.7.2.min.js", "opensearch.js", "sites/mycroft.js"],
			"run_at" : "document_end"
		}
	],

    "permissions": [
        "contextMenus",
		"storage",
		"notifications",
		"clipboardWrite"
	],

	"web_accessible_resources": [
		"folder.png",
		"icon16.png",
		"icon48.png",
		"close.png",
		"ajax-loader.gif",
		"copy.png",
		"postsearch.html",
		"postsearch.js"
	]


}
